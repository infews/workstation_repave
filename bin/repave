#!/usr/bin/env ruby
require 'pathname'

require_relative Pathname(File.join(__dir__, "..", "lib", "repave")).expand_path

module Repave
  TASKS =
    [
      SetSystemName,
      AppendToGitconfig,
      RcmConfig,
      Homebrew,
      QuicksilverYosemite,
      JetbrainsPrefs,
      SetMacOsDefaults,
    ]
end

Repave::TASKS.each do |task|
  task.new.run_task
end

system "source ~/.zshrc"
